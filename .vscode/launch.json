    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Yggdrasil with Config (Root)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/yggdrasil",
            "cwd": "${workspaceFolder}",
            "env": {},
            "args": [
                "-useconffile",
                "yggdrasil.json"
            ],
            "showLog": true,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "asRoot": true
        },
        {
            "name": "Debug Yggdrasilctl",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/yggdrasilctl",
            "cwd": "${workspaceFolder}",
            "env": {},
            "args": [],
            "showLog": true,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}